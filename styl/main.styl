border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments


red = #EC5A48
yellow = #F3BF13
green = #7AC7C5
green_hover = #7CD6D4
dark_green_text = #1B6967
blue = #13C9F3
pink = #FF63D0

.red
    background-color red

.yellow
    background-color yellow

.blue
    background-color blue

.pink
    background-color pink

body
    background-color #e5e5e5
    font-family 'Open Sans', Helvetica, sans-serif
    font-weight 400

strong
    font-weight 700

h1, h2
    font-family 'Fjord One', Georgia, serif
    color #333
    margin-bottom 0px


body > h2
    text-align center
    width 100%


ul, li
    display block
    padding 0

a
    text-decoration none

input, select, textarea, a
    outline 0 !important

a#burger
    position absolute
    display block
    color #333
    top 10px
    left 20px
    box-sizing border-box
    padding 5px
    border 1px solid transparent


    i
      font-size 20px


a#burger:hover
    border 1px solid #333333
    border-radius(3px)


#profile
    position absolute
    display block
    right 20px
    top 20px


a.ava
    width 35px
    height 35px
    display block
    background-color #eee
    border-radius(20px)

    img
        width 35px
        height 35px
        border-radius(20px)

    i
        display block
        position absolute
        font-size 24px
        top -1px
        left 1px
        color #ffffff

a.ava.logout
    i
        display none

a.ava.logout:hover
    background-color red

    img
        display none

    i
        display block


a.btn
    box-sizing border-box
    padding 10px 15px
    text-transform uppercase
    font-size 11px
    color #333333
    border 1px solid #333333
    border-radius(3px)

a.btn:hover
    background-color #333
    color #ffffff


form a.btn
    margin-top 10px


ul.menu
    position absolute
    width 200px
    height 100%
    top 0
    left 0
    background-color #efefef


p.error
    color red


#profile-wrapper
    display: block
    position: absolute
    width: 300px
    height: 50px
    top: 0
    right: 0
    padding: 0 20px


#profile-wrapper p
    display: block;
    float: right;
    margin: 20px 0 0 20px;


#home-wrapper
    width: 600px;
    margin: 0 auto;
    text-align center

    p
        margin 10px 0 20px 0

    img.logo
        margin-top 80px


img.logo
    width 60px


#login-wrapper
    display: block;
    width: 400px;
    height: auto;
    margin: 0 auto;
    text-align center

    img.logo
        margin-top 80px


    a.btn
        display block
        margin-top 40px


    input
        text-align center


.textinput
    display block
    position relative
    width 100%
    box-sizing border-box
    padding 10px 0
    background-color transparent
    border none
    border-bottom 1px solid #aeaeae
    color #333333
    font-size 14px
    margin 10px 0
    min-height 35px


#notification-form
    width: 100%;
    height: 50px;
    margin-top 30px


#notification-form select
    width: 20%;
    margin: 0 4% 0 0;
    height 35px
    border none
    float left


#notification-form textarea
    height: 20px;
    width: 73%;
    margin: 0;
    resize none


#btn-create-notification
    float: right;
    margin: 20px;


#notifications
    display: block;
    position: relative;
    width: 90%
    max-width 700px
    height: auto;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 20px;
    box-sizing: border-box;
    text-align center


    .logo
        margin 0 auto

    p.actions
        width 100%
        text-align left
        margin 10px 0

        #create-notification
            margin 10px 0
            width 180px
            text-align center



    ul
        width: 100%;
        height: auto;
        list-style-type: none;
        clear: both;


        li
            width: 100%;
            overflow: auto;
            box-sizing border-box
            padding 15px 0


            p
                display: block;
                float: left;
                margin: 0
                font-size: 14px


            p.time
                color: #a0a0a0;
                font-size 12px
                margin-left -50px
                margin-top 15px
                position absolute

            p.message
                width 98%
                background-color #efefef
                border 1px solid #cfcfcf
                border-radius(30px)
                box-shadow 0 2px 0 rgba(215,215,215,.5)
                box-sizing border-box
                padding 6px 20px 0 8px
                min-height 45px
                text-align left

                i
                    display block
                    float left
                    width 30px
                    height 30px
                    border-radius(20px)
                    font-size 20px
                    color #fff
                    box-sizing border-box
                    padding 1px 2px

                .text
                    display block
                    float left
                    margin 5px 0 0 15px


a.btn.fancy
    display block
    height 30px
    background-color green
    border-radius(20px)
    border none
    box-shadow 0 1px 0 rgba(34,117,115,.64)
    box-sizing border-box
    padding 7px 15px
    color dark_green_text

    i
        margin-left -5px

a.btn.fancy:hover
    color dark_green_text
    background-color green_hover

