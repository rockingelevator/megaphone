body {
    background-color: #f5f5f5;
}

body > h2 {
    text-align: center;
    width: 100%;
}

ul, li {
    display: block;
}

ul.menu {
    position: absolute;
    width: 200px;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #efefef;
}

p.error {
    color: red;
}

#profile-wrapper {
    display: block;
    position: absolute;
    width: 300px;
    height: 50px;
    top: 0;
    right: 0;
    padding: 0 20px;
}

#profile-wrapper p {
    display: block;
    float: right;
    margin: 20px 0 0 20px;
}

#home-wrapper {
    width: 600px;
    margin: 0 auto;
}

#login-wrapper {
    display: block;
    width: 400px;
    height: auto;
    margin: 0 auto;
}

#notifications {
    display: block;
    position: relative;
    width: 640px;
    height: auto;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 20px;
    box-sizing: border-box;
}

#notification-form {
    width: 100%;
    height: 50px;
}

#notification-form select {
    width: 25%;
    margin: 0 2% 0 0;
}

#notification-form textarea {
    height: 20px;
    width: 70%;
    margin: 0;
}

#notification-submit {
    float: right;
    margin: 20px 0;
}

#notifications ul {
    width: 100%;
    height: auto;
    list-style-type: none;
    clear: both;
}

#notifications ul li {
    width: 100%;
    overflow: auto;
}

#notifications ul li p {
    display: block;
    float: left;
    margin: 30px 20px 0 0;
}

#notifications ul li p.time {
    color: #ccc;
}

#notifications ul li p.type {
    font-weight: bold;
}

