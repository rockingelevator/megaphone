  -moz-border-radius arguments
  border-radius arguments


body
    background-color #f5f5f5
    font-family 'Open Sans', Helvetica, sans-serif


h1, h2
    font-family 'Fjord One', Georgia, serif
    color #333
    margin-bottom 0px


body > h2
    text-align center
    width 100%


ul, li
    display block

a
    text-decoration none

input,a
    outline 0 !important

a#burger
    position absolute
    display block
    color #333
    top 20px
    left 20px
    box-sizing border-box
    padding 5px
    border 1px solid transparent


    i
      font-size 20px


a#burger:hover
    border 1px solid #333333
    border-radius(3px)


#profile
    position absolute
    display block
    right 20px
    top 20px


a.btn
    box-sizing border-box
    padding 10px 15px
    text-transform uppercase
    font-size 11px
    color #333333
    border 1px solid #333333
    border-radius(3px)

a.btn:hover
    background-color #333
    color #ffffff


form a.btn
    margin-top 10px


ul.menu
    position absolute
    width 200px
    height 100%
    top 0
    left 0
    background-color #efefef


p.error
    color red


#profile-wrapper
    display: block
    position: absolute
    width: 300px
    height: 50px
    top: 0
    right: 0
    padding: 0 20px


#profile-wrapper p
    display: block;
    float: right;
    margin: 20px 0 0 20px;


#home-wrapper
    width: 600px;
    margin: 0 auto;
    text-align center

    p
        margin 10px 0 20px 0

    img.logo
        margin-top 80px


img.logo
    width 60px


#login-wrapper
    display: block;
    width: 400px;
    height: auto;
    margin: 0 auto;
    text-align center

    img.logo
        margin-top 80px


    a.btn
        display block
        margin-top 40px


    input
        text-align center


.textinput
    display block
    position relative
    width 100%
    box-sizing border-box
    padding 10px 0
    background-color transparent
    border none
    border-bottom 1px solid #aeaeae
    color #333333
    font-size 16px
    margin 10px 0


#notifications
    display: block;
    position: relative;
    width: 640px;
    height: auto;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 20px;
    box-sizing: border-box;


#notification-form
    width: 100%;
    height: 50px;


#notification-form select
    width: 25%;
    margin: 0 2% 0 0;


#notification-form textarea
    height: 20px;
    width: 70%;
    margin: 0;


#notification-submit
    float: right;
    margin: 20px 0;


#notifications ul
    width: 100%;
    height: auto;
    list-style-type: none;
    clear: both;


#notifications ul li
    width: 100%;
    overflow: auto;


#notifications ul li p
    display: block;
    float: left;
    margin: 30px 20px 0 0;


#notifications ul li p.time
    color: #ccc;


#notifications ul li p.type
    font-weight: bold;


