{% extends 'main.jinja2' %}

{% block title %}
    Notifications
{% endblock %}

{% block view %}
    <div id="notifications">
        <a href="{{ app.router['home'].url() }}">
            <img class="logo" src="/static/img/loudspeaker.svg">
        </a>
        <p class="actions">
            <a class="btn fancy" id="create-thread" href="#">
                <i class="icon-plus-circled"></i>
                New thread
            </a>
        </p>
        <form id="notification-form" action="/api/demo-team/notifications/add" method="POST">
            <select id="notification-type" name="type">
                <option value="Important">Important</option>
                <option value="Lunchtime">Lunch</option>
                <option value="Information">Information</option>
                <option value="Party">Party</option>
            </select>
            <textarea id="notification-text" name="message"></textarea>
            <input type="submit" id="notification-submit" value="Add notification">
        </form>
        <ul>
            {% for item in n_list %}
                <li>
                 <p class="time">{{ item.creation_date.strftime('%-H:%M') }}</p>
                 <p class="message">
                     <i class="icon-fire-station red"></i>
                     <span class="text">
                         <strong>{{ item.type }}</strong>&nbsp;&nbsp;{{ item.message }}
                     </span>
                 </p>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}