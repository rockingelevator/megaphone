{% extends 'main.jinja2' %}

{% block title %}
    Notifications
{% endblock %}

{% block view %}
    <div id="notifications">
        <form id="notification-form">
            <select id="notification-type">
                <option value="important">Important</option>
                <option value="lunch">Lunch</option>
                <option value="information">Information</option>
                <option value="party">Party</option>
            </select>
            <textarea id="notification-text"></textarea>
            <input type="submit" id="notification-submit" value="Add notification">
        </form>
        <ul>
            {% for item in n_list %}
                <li>
                 <p class="time">{{ item.creation_date.strftime('%-H:%M') }}</p>
                 <p class="type">{{ item.type }}</p>
                 <p class="text">{{ item.message }}</p>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div id="profile-wrapper">
        <p>Username</p>
        <p><a href="#">Logout</a></p>
    </div>
{% endblock %}